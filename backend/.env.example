# Server
NODE_ENV=development
PORT=5000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database / Prisma
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE?schema=public

# Authentication
JWT_SECRET=replace-me
JWT_EXPIRES_IN=7d
ADMIN_EMAIL=admin@harvest.org
